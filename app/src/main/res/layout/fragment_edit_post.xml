<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/colorPrimaryDark">

    <EditText
        android:id="@+id/edittitle"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_alignBaseline="@+id/editdescription"
        android:layout_alignBottom="@+id/editdescription"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:text="Title"
        android:layout_alignBaseline="@+id/edittitle"
        android:layout_alignBottom="@+id/edittitle"
        android:layout_toRightOf="@+id/edittitle"
        android:layout_toEndOf="@+id/edittitle" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/editdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edittitle"
        android:layout_alignStart="@+id/edittitle"
        android:layout_below="@+id/edittitle"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/edittimestart"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/editdescription"
        android:layout_toRightOf="@+id/Time"
        android:layout_toEndOf="@+id/Time"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/edittimeend"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/to"
        android:layout_alignBottom="@+id/to"
        android:layout_toRightOf="@+id/to"
        android:layout_toEndOf="@+id/to"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:layout_alignBaseline="@+id/edittimestart"
        android:layout_alignBottom="@+id/edittimestart"
        android:layout_toRightOf="@+id/edittimestart"
        android:layout_toEndOf="@+id/edittimestart"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:layout_alignBaseline="@+id/edittimestart"
        android:layout_alignBottom="@+id/edittimestart"
        android:layout_alignLeft="@+id/editdescription"
        android:layout_alignStart="@+id/editdescription" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/editnumavail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/title"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/numAvail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description"
        android:layout_alignStart="@+id/description"
        android:layout_centerVertical="true"
        android:text="Number Available" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/editcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editnumavail"
        android:layout_alignStart="@+id/editnumavail"
        android:layout_below="@+id/editnumavail"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:layout_alignBaseline="@+id/editcategory"
        android:layout_alignBottom="@+id/editcategory"
        android:layout_alignLeft="@+id/numAvail"
        android:layout_alignStart="@+id/numAvail" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/edittag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editcategory"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/title"
        android:layout_toStartOf="@+id/title"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edittag"
        android:layout_alignBottom="@+id/edittag"
        android:layout_alignLeft="@+id/category"
        android:layout_alignStart="@+id/category"
        android:text="Tag (optional)" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/editprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittag"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/title"
        android:layout_toStartOf="@+id/title"

        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editprice"
        android:layout_alignLeft="@+id/tag"
        android:layout_alignStart="@+id/tag"
        android:layout_marginBottom="11dp"
        android:text="Edit Price" />

    <Button
        android:id="@+id/editpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editprice"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editprice"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"
        android:text="Edit Post!" />

    <EditText
        android:id="@+id/editlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/editprice"
        android:layout_alignLeft="@+id/postnow"
        android:layout_alignStart="@+id/postnow" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editlocation"
        android:layout_alignLeft="@+id/price"
        android:layout_alignStart="@+id/price"
        android:text="Location" />

</RelativeLayout>